<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#9FEFFF">


    <TextView
        android:text="My App Portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SpotStreamer"
        android:id="@+id/spot"
        android:layout_below="@+id/textView"
        android:background="#F08C35"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="toastPopper"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scores"
        android:layout_below="@+id/spot"
        android:background="#F08C35"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="toastPopper"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/library"
        android:layout_below="@+id/scores"
        android:background="#F08C35"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="toastPopper"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:id="@+id/big"
        android:layout_below="@+id/library"
        android:background="#F08C35"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="toastPopper"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/xyz"
        android:layout_below="@+id/big"
        android:background="#F08C35"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:onClick="toastPopper"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/capstone"
        android:layout_below="@+id/xyz"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="#F08C35"
        android:onClick="toastPopper"/>

</RelativeLayout>
